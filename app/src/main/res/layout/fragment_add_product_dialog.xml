<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.mainView.dialogfragment.AddProductDialogFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD Product"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="12dp"
        android:textSize="24sp"
        android:textColor="#000000"
        android:textFontWeight="10"/>

    <EditText
        android:id="@+id/product_name_input"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_view"
        android:hint="Product Name"/>

    <EditText
        android:id="@+id/product_price_input"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:paddingTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_name_input"
        android:hint="Price"/>

    <EditText
        android:id="@+id/product_subCategory_input"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:paddingTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_price_input"
        android:hint="subCategory"/>

    <EditText
        android:id="@+id/product_description_input"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:paddingTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_subCategory_input"
        android:hint="Description"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/product_add_btn"
        app:layout_constraintTop_toBottomOf="@+id/product_description_input"
        android:text="ADD"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/product_canceladding_btn"
        android:text="Cancel"
        app:layout_constraintTop_toBottomOf="@+id/product_description_input"
        app:layout_constraintEnd_toStartOf="@+id/product_add_btn"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>